%html
  %head
    %title Test | Joseph Hsu
    %link{:href => '/layout.css', :media => 'screen', :rel => 'stylesheet'}
    %script{:src => "#{base_url}javascript/jquery.js", :type => 'text/javascript'}
    %script{:src => "#{base_url}javascript/application.js", :type => 'text/javascript'}
  %body
    #container
      #header
        %h1
          %a{:href => '/'} LinkWall
        = _session
      #content
        - if flash[:notice]
          %div.notice= flash[:notice]
        - elsif flash[:error]
          %div.error= flash[:error]

        = yield
      #footer
        &copy; 2009 Joseph Hsu
